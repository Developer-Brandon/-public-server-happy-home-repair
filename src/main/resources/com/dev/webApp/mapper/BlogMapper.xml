<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dev.webApp.mapper.BlogMapper">
    <select id="selectBlogPostingList"
            resultType="com.dev.webApp.domain.vo.BlogVO">
        <![CDATA[
            /* 전체 블로그 포스팅 리스트 조회 쿼리 */
        ]]>
        select f_t_no as postingNo
             , title as title
             , content as content
             , img_src as imgSrc
             , posted_reg_dt as postingRegDt
             , reg_dt as regDt
        from web_app_test.tb_blog_posting_info as tb_posting_info
        order by tb_posting_info.f_t_no desc
    </select>


