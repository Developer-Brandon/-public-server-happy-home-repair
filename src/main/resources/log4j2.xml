<?xml version="1.0" encoding="UTF-8" ?>
<!-- log 설정을 위한 최상위 요소 -->
<Configuration status="INFO"> <!-- log4j2 내부의 동작에 대한 로깅 level을 설정 -->
    <!-- 하단 설정에 사용할 변수들을 정의 -->
    <Properties>
        <!-- LOG_PATTERN 이라는 변수를 정의 -->
        <Property name="LOG_PATTERN">
            %d{HH:mm:ss.SSSZ} [%t] %-5level %logger{36} - %msg%n
        </Property>
    </Properties>
    <!-- LOG가 출력되는 위치 -->
    <Appenders>
        <!-- 콘솔에 출력될 로그 설정 -->
        <Console name="ConsoleLog" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
        </Console>
    </Appenders>
    <!-- 로깅 작업의 주체로 각 패키지 별로 다양한 설정을 할 수 있음 -->
    <Loggers>
        <!-- 모든 패키지에 대한 로깅을 하기 위한 일반적인 로그 정책 설정 -->
        <Root level="info">
            <AppenderRef ref="ConsoleLog" />
            <AppenderRef ref="FileLog" />
        </Root>
    </Loggers>
</Configuration>
